@model IEnumerable<IGrouping<Decimal, PatisserieCestBon.Models.OrderInfo>>
@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StatusCheck</title>
</head>
<body>
    <h2>ご注文ステータス確認</h2>
    <a>現在ご注文いただいている商品のステータスは以下のとおりです。</a>
    <a>発送済み商品のないご注文については、キャンセルが可能です。</a><br />
    @using (Html.BeginForm("OrderCancel1", "Order", FormMethod.Post))
    {
        foreach (var group in Model)
        {
            @*decimal orderNo = orderInfo.orderNo;
                    <input type="hidden"name="orderNo" value="@orderNo"/>*@
            @Html.HiddenFor(model => group.Key,new { name="groupKey"})
            <a>ご注文番号:@group.Key.ToString("000000")</a><input name="cancel" type="submit" value="この注文をキャンセル" />
            <table border="1">
                <tr>
                    <th>商品番号</th>
                    <th>商品名</th>
                    <th>数量</th>
                    <th>希望納期</th>
                    <th>ステータス</th>
                </tr>
                @foreach (var order in group)
                {
                    @Html.HiddenFor(model => order.orderNo,new { name="itemNo"})
                    <tr>
                        <td>@order.itemNo.ToString("0000")</td>
                        <td>@order.itemName</td>
                        <td>@order.quantity</td>
                        <td>@order.deliveryDate</td>
                        <td>@order.status</td>
                    </tr>
                }
            </table>
        }
    }
</body>
</html>
