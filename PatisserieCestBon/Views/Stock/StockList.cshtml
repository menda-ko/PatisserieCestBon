@model IEnumerable<PatisserieCestBon.Models.Stock>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StockList</title>
</head>
<body>
    <h2>在庫情報メンテナンス</h2>
    <table border="1">
        <tr>
            <th>商品番号</th>
            <th>商品名</th>
            <th>数量</th>
            <th>入荷予定日</th>
        </tr>
        @foreach (var stock in Model)
        {
    <tr>
        <td>@Html.DisplayFor(model => stock.itemNo)</td>
        <td>@Html.ActionLink(stock.itemName, "StockUpdate1", new { stock.itemNo })</td>
        <td>@Html.DisplayFor(model => stock.stock1)</td>
        <td>@Html.DisplayFor(model => stock.receiptDate)</td>
    </tr>
        }
    </table>
</body>
</html>
